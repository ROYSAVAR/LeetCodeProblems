class Solution {
public:

    int sumarcuadrados(int numero){

        int suma = 0;
        int digito = 0;

        while(numero > 0){
            digito = numero % 10;
            suma += digito * digito;

            numero = numero/10;
        }

        return suma;
    }
    bool isHappy(int n) {

    map<int,int> mymap;
    int sumanueva = n;
    while(true){

        sumanueva = sumarcuadrados(sumanueva);
        if(sumanueva == 1){
            return true;
        }

        
        if (mymap[sumanueva] > 0) {
                return false;
            }

            mymap[sumanueva] = 1;

    }

     



    }
};
