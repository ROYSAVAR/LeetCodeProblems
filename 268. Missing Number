class Solution {
public:
    int missingNumber(vector<int>& nums) 
    {
        
        // ordenar nums
        sort(nums.begin(), nums.end());

        for(int i = 1; i<nums.size(); i++){

            // si el numero que sigue no es subsecuente
            if(nums[i] - 1 != nums[i - 1]){
                return nums[i - 1] + 1;
            }
        }
        
        if(nums[0] == 0)   return nums.size();

        else return 0;
    }
};
