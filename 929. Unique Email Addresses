class Solution {
public:
    int numUniqueEmails(vector<string>& emails) {
        

        string aux_email = "";
        unordered_set<string> seen;
        int unique_emails = 0;
        bool plus_found = false;
        bool arroba_found = false;


        for(int i = 0; i<emails.size();i++){
            aux_email = ""; // reseteamos 
            
            plus_found = false;   
            arroba_found = false; 

            for(int j = 0; j<emails[i].size();j++){
    
                if(arroba_found != true){

                
                    if(emails[i][j] == '@'){
                        arroba_found = true;
                        aux_email += '@'; 
                        continue;
                    }

                    if(plus_found == true){
                        continue;
                    }
                    
                    if(emails[i][j] == '+'){
                        plus_found = true;
                        continue;
                    }

                    if(emails[i][j] == '.'){
                        continue;
                    }
                    
                    aux_email += emails[i][j];
                    
                    
                }else{
                    aux_email += emails[i][j];
                }
            }

            seen.insert(aux_email);
        
        }

        return (int)seen.size();
    }
};


