class Solution {
public:
    int firstUniqChar(string s) 
    {

        unordered_map<char,int> mymap;
    

        for(int i = 0; i < s.size(); i++){

            // count ocurrences of each character 
            mymap[s[i]] ++; 

        }

        for(int i = 0; i < s.size(); i++){

            // return the fist 1
            if(mymap[s[i]] == 1)return i ;

        }
        return -1;
    }
};
